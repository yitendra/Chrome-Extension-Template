{
  "name": "Template Extension",
  "version": "1.0",
  "description": "Chrome Extension Template",
  "permissions": ["activeTab", "declarativeContent", "storage", "contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/ddg.png",
      "32": "images/ddg.png",
      "48": "images/ddg.png",
      "128": "images/ddg.png"
    }
  },
  "icons": {
    "16": "images/ddg.png",
    "32": "images/ddg.png",
    "48": "images/ddg.png",
    "128": "images/ddg.png"
  },
  "manifest_version": 2,
  "commands": {
    "openDDGTab": {
      "description": "Shortcut key to open DuckDuckGo Tab",
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U",
        "linux": "Ctrl+U"
      }
    }
  }
}
